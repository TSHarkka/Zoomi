<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kayttaja.zoomi.ImageManipulation">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="213dp"
        android:layout_height="212dp"
        app:srcCompat="@drawable/auba"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/navToWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web View"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="447dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ZoomButton
        android:id="@+id/zoomOutBtn"
        android:onClick="pienenna"
        android:layout_width="82dp"
        android:layout_height="77dp"
        android:src="@drawable/zoomout"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="95dp" />


    <ZoomButton
        android:id="@+id/zoomInBtn"
        android:onClick="suurenna"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:src="@drawable/zoomin"
        android:layout_marginLeft="111dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="95dp" />

    <ZoomControls
        android:id="@+id/zoomCtrlBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="183dp" />

    <ImageButton
        android:id="@+id/moveDownBtn"
        android:onClick="moveDown"
        android:scaleType="fitCenter"
        android:layout_width="49dp"
        android:layout_height="42dp"
        app:srcCompat="@drawable/mdown"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="186dp"
        android:layout_marginRight="67dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/moveUpBtn"
        android:onClick="moveUp"
        android:scaleType="fitCenter"
        android:layout_width="55dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/mup"
        android:layout_marginRight="61dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toTopOf="@+id/moveDownBtn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/moveLeftBtn"
        android:onClick="moveRight"
        android:scaleType="fitCenter"
        android:layout_width="51dp"
        android:layout_height="47dp"
        app:srcCompat="@drawable/mleft"
        android:layout_marginRight="233dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/moveRightBtn"
        android:onClick="moveLeft"
        android:scaleType="fitCenter"
        android:layout_width="56dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mright"
        android:layout_marginRight="152dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageButton
        android:id="@+id/flipXBtn"
        android:onClick="flipX"
        android:scaleType="fitCenter"
        android:layout_width="56dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mirror2"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.753"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/flipYBtn"
        android:onClick="flipY"
        android:scaleType="fitCenter"
        android:layout_width="56dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/mirror"
        android:layout_marginRight="49dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.645"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>
